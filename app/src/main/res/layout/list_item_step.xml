<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:id="@+id/rlayout_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin">

        <TextView
            android:id="@+id/textview_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/textsize_xsmall"
            tools:text="@string/step_placeholder" />

        <ImageView
            android:id="@+id/imageview_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/activity_margin"
            android:contentDescription="@string/step_placeholder"
            android:src="@drawable/ic_play" />

    </RelativeLayout>

</android.support.v7.widget.CardView>